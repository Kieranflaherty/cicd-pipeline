pipeline {
	agent any
	tools {
		jdk "JAVA_HOME"
		maven "M2_HOME"
	}
	stages {
		stage('checkout'){
			steps {
				git 'https://github.com/Kieranflaherty/cicd-pipeline.git'
			}
		}
		stage('Build'){
			steps {
				sh "mvn clean compile"
			}
		}
		stage('test'){
			steps {
			 	sh "mvn test"
			 	junit '**/target/surefire-reports/TEST-*.xml'
			 }
		}
		stage('Package') {
			steps {
				sh "mvn package"
			}
		}		
	}
}			